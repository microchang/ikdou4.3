<aside id="left-panel" ng-controller="leftCtrl">
    <div class="login-info">
        <span>
            <a href="javascript:void(0);" id="show-shortcut" data-action="toggleShortcut">
                <img ng-src="{{leftListData.user.img}}" alt="me" class="online" />
                <span>
                    {{leftListData.user.name}}
                </span>
            </a>
        </span>
    </div>
    <nav>
        <ul>
            <li ng-repeat="i in leftListData.list">
                <a ng-href="{{i.link}}" title="{{i.title}}">
                    <i class="{{i.icon}}"></i>
                    <span class="menu-item-parent">{{i.title}}</span>
                    <span ng-if="i.message" class="badge pull-right inbox-badge">{{i.message}}</span>
                    <span ng-if="i.new" class="badge pull-right inbox-badge bg-color-yellow">new</span>
                </a>
                <ul ng-if="i.list">
                    <li ng-repeat="j in i.list">
                        <a ng-href="{{j.link}}" title="{{j.title}}">
                            <i class="{{j.icon}}"></i>
                            <span class="menu-item-parent">{{j.title}}</span>
                            <span ng-if="j.message" class="badge pull-right inbox-badge">{{j.message}}</span>
                            <span ng-if="j.new" class="badge pull-right inbox-badge bg-color-yellow">new</span>
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>
    <span class="minifyme" data-action="minifyMenu"> <i class="fa fa-arrow-circle-left hit"></i> </span>
</aside>